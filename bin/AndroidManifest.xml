<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sebbas.android.flickcam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.CAMERA" ></uses-permission>>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" ></uses-permission>>
    <uses-permission android:name="android.permission.RECORD_AUDIO" ></uses-permission>>
    <uses-permission android:name="android.permission.RECORD_VIDEO" ></uses-permission>>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-feature android:name="android.hardware.camera.autofocus" ></uses-feature>
    <uses-feature android:name="android.hardware.camera" ></uses-feature>
    <uses-feature android:required="true"></uses-feature>
    
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/camera_new2"
        android:label="@string/app_name">
        
        <activity
            android:name="org.sebbas.android.flickcam.MainFragmentActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" 
            android:theme="@style/FlickCamera">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
            
            <intent-filter>
                <action android:name="android.media.action.STILL_IMAGE_CAMERA" />
                <action android:name="android.media.action.STILL_IMAGE_CAMERA_SECURE" />
                <action android:name="android.media.action.IMAGE_CAPTURE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        <activity
            android:name="FullScreenViewActivity"
            android:theme="@style/FlickCamera">
        </activity>
    </application>

</manifest>
