<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cascade="http://schemas.android.com/apk/res/org.sebbas.android.flickcam"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical">

    <org.sebbas.android.views.CascadeLayout
        android:id="@+id/cascadeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cascade:horizontal_spacing="30dp"
        cascade:vertical_spacing="5dp" >

        <ImageView
            android:id="@+id/folder_image_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/shadow_black"
            android:contentDescription="@string/folder_preview" />

        <ImageView
            android:id="@+id/folder_image_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/shadow_black"
            android:contentDescription="@string/folder_preview" />

        <ImageView
            android:id="@+id/folder_image_2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/shadow_black"
            android:contentDescription="@string/folder_preview" />

        <ImageView
            android:id="@+id/folder_image_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/shadow_black"
            android:contentDescription="@string/folder_preview" />
    </org.sebbas.android.views.CascadeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text="Folder name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/folder_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Folder Size"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>