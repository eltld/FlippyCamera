<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">
 
    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/drawer_icon"
        android:layout_centerVertical="true" />
 
    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/drawer_item_icon"
        android:textSize="18sp"
        android:minHeight="48dip"
        android:textColor="@color/drawer_list_item_title"
        android:gravity="center_vertical"
        android:paddingRight="40dp"/>
     
    <TextView 
        android:id="@+id/drawer_item_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_extra_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/drawer_extra_text_color"/>
 
</RelativeLayout> 