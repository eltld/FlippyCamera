<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_container2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="48dp">
    
    <ImageButton
        android:id="@+id/switch_flash34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/switch_flash"
        android:background="@drawable/ic_button_selector"
        android:src="@drawable/ic_action_flash_off" />
        
    <ImageButton 
        android:id="@+id/shutter_button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/shutter_button"
        android:background="@drawable/ic_button_selector"
        android:src="@drawable/btn_shutter" />
    
    <ImageButton
        android:id="@+id/switch_flash24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/switch_flash"
        android:background="@drawable/ic_button_selector"
        android:src="@drawable/ic_action_flash_off" />
</RelativeLayout>
